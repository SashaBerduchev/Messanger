<Window x:Class="Messanger.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messanger"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox Name="Logintext"/>
            <PasswordBox Name="Pass"/>
            <Button Name="btnaut" Height="30" Content="Authorisation" Click="btnaut_Click" />
            <Button Name="btnlog" Height="30" Content="Login" Click="btnlog_Click"/>
        </StackPanel>
    </Grid>
</Window>
